#!/bin/sh

# D.A.T.A. Pre-commit Hook with JSDoc Generation
# 1. Generates JSDoc for staged JavaScript files
# 2. Runs ESLint checks for async/await issues

echo "ğŸ–– D.A.T.A. Pre-commit Hook - Ensuring code quality and documentation..."

# Get the root directory of the git repository
GIT_ROOT=$(git rev-parse --show-toplevel)

# Change to the git root directory
cd "$GIT_ROOT" || exit 1

# Get list of staged JavaScript files (exclude node_modules and only include src/, bin/, scripts/)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep '\.js$' | grep -E '^(src/|bin/|scripts/)' | grep -v node_modules)

if [ -z "$STAGED_FILES" ]; then
  echo "â„¹ï¸  No JavaScript files to process"
  exit 0
fi

echo "ğŸ“ Processing files:"
echo "$STAGED_FILES" | sed 's/^/  - /'
echo ""

# Step 1: Generate JSDoc for staged files
echo "ğŸ¤– Generating JSDoc documentation..."

# Check if JSDoc generation should be skipped
if [ "$SKIP_JSDOC" = "true" ]; then
  echo "â­ï¸  Skipping JSDoc generation (SKIP_JSDOC=true)"
else
  # Convert file list to space-separated arguments for the JSDoc generator
  JSDOC_FILES=""
  for file in $STAGED_FILES; do
    JSDOC_FILES="$JSDOC_FILES $file"
  done

  # Run JSDoc generation
  node "$GIT_ROOT/scripts/jsdoc/generate-jsdoc.js" $JSDOC_FILES

  JSDOC_EXIT=$?

  if [ $JSDOC_EXIT -eq 0 ]; then
    echo "âœ… JSDoc generation completed"
    
    # Re-stage files that may have been updated with JSDoc
    for file in $STAGED_FILES; do
      if [ -f "$file" ]; then
        git add "$file"
      fi
    done
  else
    echo "âš ï¸  JSDoc generation had issues, but continuing with commit"
    echo "ğŸ’¡ Tip: Set SKIP_JSDOC=true to skip JSDoc generation"
  fi
fi

echo ""

# Step 2: Run ESLint checks
echo "ğŸ” Running ESLint checks..."

# Run ESLint on staged files
npx eslint $STAGED_FILES

ESLINT_EXIT=$?

if [ $ESLINT_EXIT -eq 0 ]; then
  echo "âœ… ESLint checks passed!"
else
  echo "âŒ ESLint found issues. Please fix them before committing."
  echo ""
  echo "ğŸ’¡ Tip: You can run 'npm run lint:fix' to auto-fix some issues"
  echo "ğŸ’¡ Tip: Set SKIP_JSDOC=true if JSDoc generation is causing issues"
  exit 1
fi

# Step 3: Check specifically for async/await issues
echo ""
echo "ğŸ” Checking for floating promises and async issues..."

# Look for common async/await problems in staged files
for file in $STAGED_FILES; do
  # Check for .then() without catch
  if grep -E '\.then\([^)]*\)[^.]*(;|$)' "$file" > /dev/null 2>&1; then
    echo "âš ï¸  Warning: $file may have unhandled promises (.then without .catch)"
  fi
  
  # Check for async functions without await
  if grep -E 'async\s+[^{]*\{[^}]*\}' "$file" | grep -v await > /dev/null 2>&1; then
    echo "âš ï¸  Warning: $file may have async functions without await"
  fi
done

echo ""
echo "ğŸ¯ Pre-commit checks complete! Code quality and documentation ensured."
echo ""
echo "ğŸ’¡ To skip JSDoc generation: SKIP_JSDOC=true git commit"
echo "ğŸ’¡ To manually generate JSDoc: npm run jsdoc:generate"
echo "ğŸ’¡ To generate JSDoc for specific files: npm run jsdoc:files -- file1.js file2.js"

exit 0
